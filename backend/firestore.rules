rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Nodes collection
    match /nodes/{nodeId} {
      allow read, write: if request.auth != null;

      // Validation rules for creating and updating nodes
      allow create: if request.auth != null &&
                      request.resource.data.ownerId == request.auth.uid &&
                      request.resource.data.name is string &&
                      request.resource.data.status in ['Safe', 'Busy', 'Offline', 'Help'] &&
                      request.resource.data.lastUpdated == request.time &&
                      request.resource.data.type in ['Active', 'Passive'] &&
                      request.resource.data.tier is number;

      allow update: if request.auth != null &&
                       // Allow owner to update everything
                       (resource.data.ownerId == request.auth.uid ||
                       // Allow participant to update their own status
                       (resource.data.ownerId == request.auth.uid && request.resource.data.keys().hasOnly(['status', 'lastUpdated'])));
    }

    // Edges collection
    match /edges/{edgeId} {
      allow read, write: if request.auth != null;

      // Validation rules for creating and updating edges
      allow create: if request.auth != null &&
                      request.resource.data.fromNode is string &&
                      request.resource.data.toNode is string &&
                      request.resource.data.referralToken is string &&
                      request.resource.data.accepted == false &&
                      request.resource.data.tier is number;

      allow update: if request.auth != null &&
                       // Allow involved nodes to accept the edge
                       (request.auth.uid == get(/databases/$(database)/documents/nodes/$(request.resource.data.toNode)).data.ownerId &&
                        request.resource.data.keys().hasOnly(['accepted']));
    }
  }
}